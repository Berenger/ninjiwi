  "minimum-stability": "stable",
  "license": "MIT",
  "homepage": "https://github.com/berenger/ninjiwi",
  "authors": [
    {
      "name": "Berenger VIDAL",
      "email": "berenger.vidal@hotmail.fr"
    }
  ],
  "require": {
    "league/climate": "^3.5",
    "league/commonmark": "^1.5",
    "league/flysystem": "^1.0",
    "league/plates": "^3.3",
